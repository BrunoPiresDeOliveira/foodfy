{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
    <link rel="stylesheet" href="/styles-recipes.css">
{% endblock%}

{% block header %}
    <a href="/sobre">Sobre</a>
    <a href="/receitas" style="font-weight: bold;">Receitas</a>
{% endblock %}

{% block main %}
    <main>
        <section class="recipes" class="cursor">
            {% for item in items %}
            <div class="recipe" id="{{item.id}}">
                <img src="{{item.image}}" alt="Imagem do prato {{item.title}}">
                <h3>{{item.title}}</h3>
                <p>por {{item.author}}</p>
            </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}